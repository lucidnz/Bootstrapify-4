{
  "name": "Blog",
  "settings": [
    {
      "type": "header",
      "content": "Blog List"
    },
    {
      "label": "Article pagination limit",
      "id": "pagination_limit_articles",
      "type": "text",
      "default": "50"
    },
    {
      "label": "Truncate words for articles",
      "id": "truncate_article_results",
      "type": "text",
      "default": "200",
      "info": "This will stop articles with long content from making the blog to long. If left blank then the whole articles content will be shown."
    },
    {
      "label": "Show RSS feed link",
      "id": "enable_rss_link",
      "type": "checkbox",
      "default": true
    },
    {
      "type": "header",
      "content": "Authors"
    },
    {
      "label": "Show Author",
      "id": "blog_show_author",
      "type": "checkbox",
      "default": true
    },
    {
      "label": "Show Author Bios",
      "id": "blog_show_author_bio",
      "type": "checkbox",
      "default": true
    },
    {
      "type": "header",
      "content": "Comments"
    },
    {
      "label": "Use Gravatar for comment avatars",
      "id": "enable_gravatars",
      "type": "checkbox",
      "default": true
    },
    {
      "label": "Comment pagination limit",
      "id": "pagination_limit_comments",
      "type": "text",
      "default": "25"
    },
    {
      "type": "header",
      "content": "Social share links"
    },
    {
      "label": "Enable Twitter link",
      "id": "article_social_share_twitter",
      "type": "checkbox",
      "default": true
    },
    {
      "label": "Enable Facebook link",
      "id": "article_social_share_facebook",
      "type": "checkbox",
      "default": true
    },
    {
      "label": "Enable Pinterest link",
      "id": "article_social_share_pinterest",
      "type": "checkbox",
      "default": true
    },
    {
      "label": "Enable email link",
      "id": "article_social_share_email",
      "type": "checkbox",
      "default": true
    },
    {
      "type": "header",
      "content": "Recent Articles"
    },
    {
      "label": "Show recent articles",
      "id": "show_recent_articles",
      "type": "select",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "list", "label": "As List" },
        { "value": "thumbs", "label": "As Thumbs" }
      ],
      "default": "list",
      "info": "If 'As Thumbs' is selected you will need to include an image in each post to be used as the thumbnail picture."
    },
    {
      "label": "Recent articles limit",
      "id": "recent_articles_limit",
      "type": "text",
      "default": "3"
    },
    {
      "type": "header",
      "content": "Article Banners"
    },
    {
      "label": "Use first image as a banner on article lists",
      "id": "enable_article_list_banners",
      "type": "checkbox",
      "default": false,
      "info": "When checked the first image from the article will be pulled out of the content and displayed as a banner above the article excerpt"
    },
    {
      "label": "Use first image as a banner on articles",
      "id": "enable_article_banners",
      "type": "checkbox",
      "default": false,
      "info": "When checked the first image from the article will be pulled out of the content and displayed as a fullscreen banner above the article"
    },
    {
      "label": "Show artcle title over banner",
      "id": "show_article_title_on_banner",
      "type": "checkbox",
      "default": false
    },
    {
      "label": "Artcle title alignment",
